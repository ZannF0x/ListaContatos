<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/contact_shape"
    android:layout_margin="5dp"
    android:padding="10dp"
    android:elevation="10dp"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true">

        <ImageView
            android:id="@+id/contactPhotoXml"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/user_app"/>

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/contactPhotoXml"
            app:layout_constraintTop_toTopOf="@id/contactPhotoXml"
            android:layout_marginStart="20dp"
            android:text="@string/contact_name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/textViewNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textViewName"
            app:layout_constraintStart_toEndOf="@id/contactPhotoXml"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="@string/number_exemple"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="18sp"
            />

</androidx.constraintlayout.widget.ConstraintLayout>